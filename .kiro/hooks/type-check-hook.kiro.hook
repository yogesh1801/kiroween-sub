{
  "enabled": true,
  "name": "TypeScript Type Check",
  "description": "Runs TypeScript type checking when TypeScript or TSX files are modified to catch type errors early",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "**/*.ts",
      "**/*.tsx"
    ]
  },
  "then": {
    "type": "runCommand",
    "command": "npx tsc --noEmit"
  }
}